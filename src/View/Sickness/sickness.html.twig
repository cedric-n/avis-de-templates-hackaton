{% extends 'layout.html.twig' %}
{% block stylesheet %}<link rel="stylesheet" href="/assets/css/sickness.css">{% endblock %}

{% block content %}
    <div class="container-lg">
        <div class="row mx-1 d-flex flex-row justify-content-center">

            <div class="content-map">
                <img class="icon-portugal icon" src="/assets/images/icon.jpg">
                <img class="icon-irland icon" src="/assets/images/icon.jpg">
                <img class="icon-england icon" src="/assets/images/icon.jpg">
                <img class="icon-spain icon" src="/assets/images/icon.jpg">
                <img class="icon-france icon country" src="/assets/images/icon.jpg">
                <img class="map" src="/assets/images/map.jpg">
            </div>

            <div class="content-card overflow-auto country">
            {% for data in datas %}
                    <div class="card {{ data.country }} border w-50 mx-auto">
                        <div class="backgound-blason">
                            {% for picture in pictures %}
                                <img src="">
                            {% endfor %}
                            <img src="/assets/images/manuscrit.jpg">
                        </div>
                        <h2>{{ data.country }}</h2>
                        <ul class="data">
                            <li>Capital: {{ data.capital_city }}</li>
                            <li>Nombre confirmé: {{ data.confirmed }}</li>
                            <li>Nombre de rétablis: {{ data.recovered }}</li>
                            <li>Nombre de morts: {{ data.deaths }}</li>
                        </ul>
                    </div>
            {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}